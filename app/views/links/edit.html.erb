<h3>Edit Link</h3>

<%= form_for @link do |f|  %>
  
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, class: "form-control" %>
  </div>
  <br />
  
  <div class="field">
    <%= f.label :url %>
    <em><p class="url-format">Link url must begin with "http://" or "https://"</p></em>
    <%= f.text_field :url, autofocus: true, class: "form-control" %>
  </div>
  <br />

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
<br />