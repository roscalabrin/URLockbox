<h2>Edit Link</h2>

<%= form_for @link do |f|  %>
  
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, class: "form-control" %>
  </div>
  <br />
  
  <div class="field">
    <%= f.label :url %>
    <p>Link must begin with "http://" or "https://"</p>
    <%= f.text_field :url, autofocus: true, class: "form-control" %>
  </div>
  <br />

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
<br />