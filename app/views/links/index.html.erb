
<div class="col-md-6 col-md-offset-3">
  <%= render "links/new" %>
  <hr>
  <div class="search-form">
    <input type="text" name="search" class="search-links" placeholder="Search Links"> 
  </div>
  
  <div class="all-links">
    <h3>My Links</h3>
    <% if @links %>
      <% @links.each do |link| %>
        <div id="link-container-<%= link.id %>" class="link-details" data-id="<%= link.id %>">
          <p><%= link.title %></p>
          <p><%= link.url %></p>
            <% if link.read %>
              <button type="button" class="btn-read btn btn-primary">Mark as Unread</button>
            <% else %>
              <button type="button" class="btn-read btn btn-primary">Mark as Read</button>
            <% end %>
            <%= link_to "Edit Link", edit_link_path(link), method: :get %> 
        </div>
        <br />
      <% end %>
    <% end %>
  </div>
</div>