<div class="col-md-4">
  <%= render "links/new" %>

  <div class="all-links">
    <h2>My Links</h2>
    <% if @links %>
      <% @links.each do |link| %>
        <div id="link-container-<%= link.id %>" data-id="<%= link.id %>">
          <p><%= link.title %></p>
          <p><%= link.url %></p>  
            <% if link.read %>
              <button type="button" class="btn-read btn btn-primary">Mark as Unread</button>
            <% else %>
              <button type="button" class="btn-read link.read %> btn btn-primary">Mark as Read</button>
            <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>